<header class="ht-header">
	<div class="container">
		<nav class="navbar navbar-default navbar-custom">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header logo">
				    <div class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					    <span class="sr-only">Toggle navigation</span>
					    <div id="nav-icon1">
							<span></span>
							<span></span>
							<span></span>
						</div>
				    </div>
				    <a href="/"><img class="logo" src="/user/images/logo2.png" alt="" width="125"></a>
			    </div>
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse flex-parent" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav flex-child-menu menu-left">
						<li class="hidden">
							<a href="#page-top"></a>
						</li>
						<li>
							<a href="/"><%- __('header.dashboard') %></a>
						</li>
						<li class="dropdown first header-dropdown">
							<a class="btn btn-default dropdown-toggle lv1" data-toggle="dropdown" data-hover="dropdown">
							<%- __('header.category') %><i class="fa fa-angle-down" aria-hidden="true"></i>
							</a>
							<ul class="dropdown-menu level1">
								<% typeof categories != 'undefined' && categories.forEach(category => { %>
									<% if (category.children.length) { %>
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown" ><%- category.name %><i class="ion-ios-arrow-forward"></i></a>
											<ul class="dropdown-menu level2">
												<% category.children.forEach(child => { %>
												<li><a href="/book/category?id=<%- child._id %>"><%- child.name %></a></li>
												<% }) %>
											</ul>
										</li>			
									<% } else { %>
										<li><a href="/book/category?id=<%- category._id %>"><%- category.name %></a></li>		 
									<% } %>
								<% }) %>
							</ul>
						</li>
						<li>
							<a href="/writer"><%- __('header.contributor') %></a>
						</li>
						<li>
							<a href="/blog"><%- __('header.blog') %></a>
						</li>
						<!-- <li>
							<a href="/"><%- __('header.about-us') %></a>
						</li> -->
					</ul>
					<ul class="nav navbar-nav flex-child-menu menu-right">
						<% if (typeof user !== 'undefined') { %>
							<img src="/user/images/no-image.png" class="avatar-image" alt="" width="35px" height="35px">						
						<% } else { %>
							<li class="loginLink"><a href="#"><%- __('auth.login') %></a></li>
							<li class="btn signupLink"><a href="#"><%- __('auth.sign-up') %></a></li> 
						<% } %>
					</ul>
				</div>
			<!-- /.navbar-collapse -->
	    </nav>
	    
	    <!-- top search form -->
		<form action="/book/category" method="get" class="top-search">
	    	<!-- <select name="id">
				<option value="">Thể loại</option>
				<% typeof categories != 'undefined' && categories.forEach(category => { %>
					<option value="<%- category._id %>"><%- category.name %> </option>
				<% }) %> 
			</select> -->
			<input type="text" placeholder="Tìm kiếm sách mà bạn cần" name="book_name">
	    </form>
	</div>
</header>