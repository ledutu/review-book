<script>

    async function confirmBeforeDelete(id) {
        cuteAlert({
            type: "question",
            title: "Xóa",
            message: "Bạn có muốn xóa bình luận này không?",
            confirmText: "Đồng ý",
            cancelText: "Hủy"
        }).then(async e => {
            if(e) {
                fetch('/user-cms/book-review', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                        // 'Accept': 'application/json',
                    },
                    body: JSON.stringify({ id })
                })
                    .then(response => response.json())
                    .then(data => {
                        console.log(data)
                    })
                    .catch(err => {
                        console.log(err);      
                    });
            }
        })
    }
</script>

