<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />

		<!-- ========== Css Files ========== -->
		<%- include('layouts/head') %>
	</head>
	<body>
		<!-- START HEADER -->
		<%- include('layouts/header') %>
		<!-- END HEADER -->

		<!-- START SIDEBAR -->
		<%- include('layouts/sidebar') %>
		<!-- END SIDEBAR -->

		<!-- START CONTENT -->
		<div class="content">
			<!-- Start Page Header -->
			<div class="page-header">
				<h1 class="title"><%- id? 'Cập nhật thể loại': 'Tạo thể loại' %></h1>
				<ol class="breadcrumb">
					<li><a href="/admin">Trang chủ</a></li>
					<li class="active"><%- id? 'Cập nhật thể loại': 'Tạo thể loại' %></li>
				</ol>
				<div class="right">
					<div class="btn-group" role="group" aria-label="...">
						<a href="/admin/review-category"
							><button class="btn">Quay lại</button></a
						>
					</div>
				</div>
			</div>
			<!-- End Page Header -->

			<!-- START CONTAINER -->
			<div class="container-flush">
				<!-- Start Row -->
				<div class="row">
					<!-- Start Panel -->
					<div class="col-lg-12">
						<div class="panel panel-default">
							<div class="panel-title">
								Thể loại
								<ul class="panel-tools">
									<li>
										<a class="icon expand-tool"
											><i class="fa fa-expand"></i
										></a>
									</li>
								</ul>
							</div>
							<div class="panel-body">
								<form action="<%- id ? '/admin/review-category/update': '/admin/review-category/create' %>" 
									method="POST" >
									<input type="hidden" name="id" value="<%- id %>">
									<div class="form-group">
										<label for="input1" class="form-label">Tên thể loại</label>
										<input type="text" class="form-control" placeholder="Nhập tên thể loại" id="cate_name" name="cate_name" required value="<%- reviewTag.name %>">
									</div>
									<div class="form-group">
										<label for="slug"  class="form-label">Tên ngắn</label>
										<input type="text" placeholder="Nhập tên ngắn" class="form-control" name="short_name" id="short_name" value="<%- reviewTag.short_name %>">
									</div>
									<div class="form-group">
										<label class="form-label">Thể loại</label>
										<select class="form-control selectpicker" name="tag_color" >
											<option value="none" disabled selected hidden>Chọn màu</option>
											<option value="blue">Blue</option>
											<option value="red">Red</option>
											<option value="violet">Violet</option>
											<option value="green">Green</option>
											<option value="indigo">Indigo</option>
											<option value="orange">Orange</option>
											<option value="yell">Yellow</option>
										</select>
									</div>
			
									<button id="submitButton" type="submit" class="btn btn-default"><%- id? 'Cập nhật': 'Đăng bài' %></button>
								</form>
				
							</div>
						</div>
					</div>
					<!-- End Panel -->
				</div>
				<!-- End Row -->
			</div>
			<!-- END CONTAINER -->
		</div>
		<!-- End Content -->

		<%- include('layouts/javascript') %>
	</body>
</html>
