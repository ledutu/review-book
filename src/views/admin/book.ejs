<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="">
    <meta name="description" content="">
    <meta name="keywords" content="" />
  
  
    <!-- ========== Css Files ========== --> 
    <%- include('layouts/head') %>

  </head>
  <body>
  <!-- Start Page Loading -->
  <%- include('layouts/loading') %>
  <!-- End Page Loading -->
 <!-- //////////////////////////////////////////////////////////////////////////// --> 
  <!-- START HEADER -->
  <%- include('layouts/header') %>
  <!-- END HEADER -->
 <!-- //////////////////////////////////////////////////////////////////////////// --> 


<!-- //////////////////////////////////////////////////////////////////////////// --> 
<!-- START SIDEBAR -->
<%- include('layouts/sidebar') %>
<!-- END SIDEBAR -->
<!-- //////////////////////////////////////////////////////////////////////////// --> 

 <!-- //////////////////////////////////////////////////////////////////////////// --> 
<!-- START CONTENT -->
<div class="content">

 <!-- //////////////////////////////////////////////////////////////////////////// --> 
<!-- START CONTAINER -->
<div class="container-padding">
  <!-- Start Row -->
  <div class="row">
    <!-- Start Panel -->
    
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-title">
          
          <div class="btnAdd" style="display:flex;justify-content: space-between;">
            Quản lý sách
            <a href="/admin/create-book" type="button" class="btn btn-success btn-lg" >Thêm</a>
          </div>
        </div>
        <div class="panel-body table-responsive">

            <table id="example0" class="table display">
                <thead>
                  <tr>
                    <!-- <td class="text-center"><i class="fa fa-trash"></i></td> -->
                    <td>Name</td>
                    <td>Image</td>
                    <td>Category</td>
                    <td>Action</td>
                  </tr>
                </thead>
                <tbody>    
                  <% books.forEach(book =>{  %>
                    <tr>
                      <td><%- book.book_name %></td>
                      <td><%- book.image.title %></td>
                      <td>
                        <% book.category.forEach(category =>{%>
                          <%- category.name %>
                        <% })  %>
                      </td>
                      <td>
                        <a href="/admin/book/<%- book._id %>"><i class="fas fa-edit admin-table__icon-edit"></i></a>
                        
                        <a href="" data-id="<%- book._id %>" data-toggle="modal" data-target="#delete-user-modal">
                          <i class="fas fa-trash-alt admin-table__icon-delete"></i>
                        </a>
                      </td>
                    </tr> 
                  <% }) %>
                </tbody>
            </table>


        </div>

      </div>
    </div>
    <!-- End Panel -->
  </div>
  <!-- End Row -->
</div>
<!-- END CONTAINER -->
 <!-- //////////////////////////////////////////////////////////////////////////// --> 
</div>
<!-- End Content -->
 <!-- //////////////////////////////////////////////////////////////////////////// --> 


<!-- //////////////////////////////////////////////////////////////////////////// --> 
<!-- //////////////////////////////////////////////////////////////////////////// --> 



<%- include('layouts/javascript') %>


</body>
</html>