<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="">
    <meta name="description" content="">
    <meta name="keywords" content="" />
  
  
    <!-- ========== Css Files ========== --> 
    <%- include('layouts/head') %>
    
  </head>
  <body>
        <!-- Start Page Loading -->
  <%- include('layouts/loading') %>
  <!-- End Page Loading -->
  <!-- START HEADER -->
  <%- include('layouts/header') %>
  <!-- END HEADER -->


<!-- START SIDEBAR -->
<%- include('layouts/sidebar') %>
<!-- END SIDEBAR -->
<!-- START CONTENT -->
<div class="content">

  <!-- Start Page Header -->
  <div class="page-header">
    <h1 class="title">Sửa sách</h1>
  
    <div class="right">
        <a href="/admin/book"><button class="btn btn-info btn-lg" >Quay lại</button></a>
      </div>
  </div>
  <!-- End Page Header -->

<!-- START CONTAINER -->
<div class="container-padding">
  <!-- Start Row -->
  <div class="row">
    <!-- Start Panel -->
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
            <form class="form-horizontal" action="/admin/book/<%- books._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <label class="col-sm-2 control-label form-label" for="book_name">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="<%- books.book_name %>" id="book_name" name="book_name">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label form-label">Category</label>
                      <div class="col-sm-10">
                        <select class="selectpicker" multiple data-live-search="true" name="category">
                            <% categories.forEach(category =>{%>
                                <option value="<%- category._id %>" class="<%- category._id %>" <%- arrID.some(function (cate) {
                                    return cate.equals(category._id);
                                }) && 'selected' %> > <%- category.name %></option>
                            <% })%>
                        </select>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                    </div>
            </form>

            </div>
        </div>
      </div>
    <!-- End Panel -->
  </div>
  <!-- End Row -->
</div>
<!-- END CONTAINER -->
</div>
<!-- End Content -->




<%- include('layouts/javascript') %>


</body>
</html>