  <div class="row">
    <!-- Start Panel -->
    
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-title">
          
          <div class="btnAdd" style="display:flex;justify-content: space-between;">
            Quản lý thể loại sách
            <a href="/admin/create-book" type="button" class="btn btn-success btn-lg" >Thêm</a>
          </div>
        </div>
        <div class="panel-body table-responsive">

            <table id="example0" class="table display">
                <thead>
                  <tr>
                    <!-- <td class="text-center"><i class="fa fa-trash"></i></td> -->
                    <td>Name</td>
                    <td>Short name</td>
                    <td>Tag color</td>
                    <td>Action</td>
                  </tr>
                </thead>
                <tbody>    
                  <% bookCategories.forEach(category =>{  %>
                    <tr>
                      <td><%- category.name %></td>
                      <td><%- category.short_name %></td>
                      <td><%- category.tag_color %></td>
                      <td>
                        <i class="fas fa-edit admin-table__icon-edit"></i>
                        <i class="fas fa-trash-alt admin-table__icon-delete"></i>
                      </td>
                    </tr> 
                  <% }) %>
                </tbody>
            </table>


        </div>

      </div>
    </div>
